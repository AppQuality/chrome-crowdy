{
	"manifest_version": 2,
	"name": "Click Recorder",
	"version": "0.1",
	"description": "The extension that spies your tabs and clicks!",
	"browser_action": {
		"default_title": "Recorder",
        "default_popup": "popup/popup.html"
	},

	"icons": { 
		"16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" },

	"permissions": [
      	"storage",
      	"unlimitedStorage",
      	"tabs",
      	"downloads",
		"webRequest",
		"<all_urls>"
    ],

    "web_accessible_resources": [
    	"popup/json.txt"
	],

	"content_scripts": [
	{
		"matches": [
			"<all_urls>"
		],
		"run_at": "document_start",
		"js": ["scripts/utility.js", "scripts/inject.js"]
	},
	{
		"matches": [
			"<all_urls>"
		],
		"run_at": "document_idle",
		"js": ["lib/FileSaver.min.js", "lib/jszip.min.js", "scripts/content.js"]
	}
	
	],

	"background": {
		"scripts": ["scripts/utility.js", "scripts/background.js"]
	}
}